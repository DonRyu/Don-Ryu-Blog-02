---
import { Image } from 'astro:assets'
import kcp from 'public/images/kcp.png'
import coship from 'public/images/coship.png'
---

<div class='flex flex-col h-full space-y-6'>
	<h2 class='text-xl font-bold m-0'>Projects I joined</h2>
	<div class='flex flex-col space-y-2'>
		<div class='flex justify-start items-center space-x-3 hover:text-blue-500'>
			<Image
				src={kcp}
				width={40}
				height={40}
				quality={100}
				format='png'
				loading='eager'
				class='bg-blue-400 dark:bg-slate-300 rounded-md w-auto max-h-[200px] md:max-h-[150px] object-contain'
				alt={`Don Ryu avatar`}
			/>
			<a href='https://github.com/pilcrowOnPaper/arctic'
				>Concrete pump sales website</a
			>
		</div>
		<div class='flex justify-start items-center space-x-3 hover:text-blue-500'>
			<Image
				src={coship}
				width={40}
				height={40}
				quality={100}
				format='png'
				loading='eager'
				class='bg-blue-400 dark:bg-slate-300 rounded-md w-auto max-h-[200px] md:max-h-[150px] object-contain'
				alt={`Don Ryu avatar`}
			/>
			<a href='https://github.com/pilcrowOnPaper/arctic'
				>Shipping company website
			</a>
		</div>
	</div>
</div>
